{
    "name": "dansup/hub",
    "description": "The hyperboria network information utility.",
    "keywords": ["cjdns", "hyperboria", "project meshnet", "network", "node"],
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "guzzlehttp/guzzle": "~5.3|~6.0",
        "laravel/framework": "5.1.*",
        "laravel/socialite": "~2.0",        
        "league/fractal": "0.12.*",
        "league/glide": "^0.3.5",
        "moontoast/math": "^1.1",
        "predis/predis": "~1.0",
        "ranvis/identicon": "1.0.0",
        "ramsey/uuid": "~2.8",
        "suin/php-rss-writer": "1.*",
        "willdurand/nmap": "0.1.0"

    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "laracasts/generators": "~1.1.1",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
    	"classmap": [
    		"database"
    	],
    	"psr-4": {
    		"App\\": "app/",
            "Nmap\\": "vendor/willdurand/nmap/src/"
    	}
    },
    "autoload-dev": {
    	"classmap": [
    		"tests/TestCase.php"
    	]
    },
    "scripts": {
    	"post-install-cmd": [
    		"php artisan clear-compiled",
    		"php artisan optimize"
    	],
    	"post-update-cmd": [
    		"php artisan clear-compiled",
    		"php artisan optimize"
    	],
    	"post-create-project-cmd": [
    		"php -r \"copy('.env.example', '.env');\"",
    		"php artisan key:generate"
    	]
    },
    "config": {
    	"preferred-install": "dist"
    }
}
