{
    "name": "dansup/hub",
    "description": "The hyperboria network information utility.",
    "keywords": ["cjdns", "hyperboria", "project meshnet", "network", "node"],
    "type": "project",
    "require": {
       "laravel/framework": "5.0.*",
                "league/fractal": "0.12.*",
                "league/oauth1-client": "~1.0",
                "suin/php-rss-writer": "1.*",
                "yzalis/identicon": "*",
        "fzaninotto/faker": "^1.4",
        "jenssegers/mongodb": "^2.1",
        "orangehill/iseed": "^2.0"
    },
    "require-dev": {
    	"phpunit/phpunit": "~4.0",
    	"phpspec/phpspec": "~2.1",
    	"laracasts/generators": "~1.1"
    },
    "autoload": {
    	"classmap": [
    		"database"
    	],
    	"psr-4": {
    		"App\\": "app/"
    	}
    },
    "autoload-dev": {
    	"classmap": [
    		"tests/TestCase.php"
    	]
    },
    "scripts": {
    	"post-install-cmd": [
    		"php artisan clear-compiled",
    		"php artisan optimize"
    	],
    	"post-update-cmd": [
    		"php artisan clear-compiled",
    		"php artisan optimize"
    	],
    	"post-create-project-cmd": [
    		"php -r \"copy('.env.example', '.env');\"",
    		"php artisan key:generate"
    	]
    },
    "config": {
    	"preferred-install": "dist"
    }
}
